                    <newvalue>IKE v2</newvalue>
                </mapping>
            </mappings>
        </value_map>
        <value_map>
            <name>pfSense IPsec Phase 1 Status</name>
            <mappings>
                <mapping>
                    <value>0</value>
                    <newvalue>Down</newvalue>
                </mapping>
                <mapping>
                    <value>1</value>
                    <newvalue>Established</newvalue>
                </mapping>
                <mapping>
                    <value>2</value>
